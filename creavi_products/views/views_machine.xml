<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="creavi_products.list_machines">
      <field name="name">creavi_machines list</field>
      <field name="model">creavi_machine</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="cadence"/>
          <field name="hour_cost"/>
        </tree>
      </field>
    </record>

    


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="creavi_products.action_window_machines">
      <field name="name">creavi_machines window</field>
      <field name="res_model">creavi_machine</field>
      <field name="view_mode">tree,form</field>
    </record>


