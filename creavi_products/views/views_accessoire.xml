<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="creavi_products.list_accessoire">
      <field name="name">creavi_accessoire list</field>
      <field name="model">creavi_accessoire</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="quantity_per_product"/>
          <field name="tps_pose_per_product"/>
          <field name="tps_pose_global"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="creavi_products.action_window_accessoire">
      <field name="name">creavi_accessoire window</field>
      <field name="res_model">creavi_accessoire</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="creavi_products.action_server_accessoire">
      <field name="name">creavi_accessoire server</field>
      <field name="model_id" ref="model_creavi_accessoire"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": creavi_accessoire,
        }
      </field>
    </record>


    <!-- Top menu item -->
        <menuitem id="Accessoire" name="Accessoires" action="creavi_products.action_window_accessoire"/>
